<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="akshay.tycse.wce.newtouchpad.GamingConsole">

    <Button
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:text="up"
        android:id="@+id/upk"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/downk"
        android:layout_alignStart="@+id/downk" />

    <Button
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:text="    &lt;"
        android:id="@+id/leftk"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/upk"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:text="down"
        android:id="@+id/downk"
        android:layout_alignTop="@+id/leftk"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:text=">"
        android:id="@+id/rightk"
        android:layout_alignTop="@+id/downk"
        android:layout_toRightOf="@+id/downk"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="38dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
